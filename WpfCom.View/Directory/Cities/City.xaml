<UserControl
    x:Class="WpfCom.View.Directory.Cities.City"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfCom"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="500"
    FontFamily="Century Gothic"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WpfCom.View;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        BorderBrush="White"
        BorderThickness="2"
        CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="2,1">
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="ButAdd"
                        Width="100"
                        Height="30"
                        MinWidth="30"
                        Click="CityAdd_Click"
                        Command="{Binding CityAddCommand, Mode=OneWay}"
                        Content="Add"
                        Style="{StaticResource TransparentButtonStyle}" />
                    <Button
                        x:Name="ButEdit"
                        Width="100"
                        Height="30"
                        MinWidth="30"
                        Content="Edit"
                        Style="{StaticResource TransparentButtonStyle}" />
                    <Button
                        x:Name="ButDelete"
                        Width="100"
                        Height="30"
                        MinWidth="30"
                        Content="Delete"
                        Style="{StaticResource TransparentButtonStyle}" />
                </StackPanel>
                <Button
                    x:Name="btnAdd"
                    Grid.ColumnSpan="1"
                    Width="25"
                    Height="25"
                    Margin="1,1,3,1"
                    HorizontalAlignment="Right"
                    Click="btnCityClose_Click"
                    Style="{DynamicResource RedButtonStyle}">
                    <Viewbox Width="20" Height="20">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="100" Height="100" />
                            <Line
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Stroke="White"
                                StrokeThickness="10"
                                X2="50"
                                Y2="50" />
                            <Line
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Stroke="White"
                                StrokeThickness="10"
                                X1="50"
                                Y2="50" />
                        </Grid>
                    </Viewbox>
                </Button>

            </Grid>
            <Grid Grid.Row="1">
                <ListView
                    x:Name="CityDataList"
                    Grid.ColumnSpan="2"
                    Height="Auto"
                    ItemsSource="{Binding CityOC}"
                    Style="{StaticResource MyListBoxStyle}">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{DynamicResource GridViewColumnHeaderStyle}">
                            <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="№" />
                            <GridViewColumn DisplayMemberBinding="{Binding City}" Header="Город" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Border>
</UserControl>